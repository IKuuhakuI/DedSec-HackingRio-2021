            Button:
                pos_hint: {"x":0.6,"y":0.15}
                size_hint: 0.2, 0.1
                font_size: (root.width**2 + root.height**2)**0.5 / 30
                text:"Voltar"
                on_release:
                    #root.manager.transition.direction = "down"
                    root.manager.transition = NoTransition()
                    root.voltar()

<TelaAreas>
    canvas.before:
        Color:
            rgba: 0.04, 0.62, 0.75, 1
            # 9 159 191 255
        Rectangle:
            pos: self.pos
            size: self.size
            
    name: "areas"

    GridLayout:
        rows: 3
        spacing: 20
        padding: [20, 10]

        BoxLayout:
            orientation: "vertical"
            size_hint: [0.7,0.5]
            
            Image:
                source: "recursos/barraXP.png"
                allow_stretch: True
                keep_ratio: True
                on_touch_down: root.pressionouImagem()

        BoxLayout:
            orientation: "vertical"
            size_hint: [1,2]
            GridLayout:
                cols: 3
                spacing: 5
                padding: [10, 10]
                Button:
                    pos_hint: {"x":0,"y":0}
                    size_hint:[1, 1]
                    font_size: (root.width**2 + root.height**2)**0.5 / 30
                    text:"Marketing"
                    on_release:
                        #root.manager.transition.direction = "down"
                        root.manager.transition = NoTransition()
                        root.irMarketing()
                Button:
                    pos_hint: {"x":0,"y":0}
                    size_hint:[1,1]
                    font_size: (root.width**2 + root.height**2)**0.5 / 30
                    text:"Gestão"
                Button:
                    pos_hint: {"x":0,"y":0}
                    size_hint:[1,1]
                    font_size: (root.width**2 + root.height**2)**0.5 / 30
                    text:"Finanças"
        
        BoxLayout:
            padding: [250, 0]
            orientation: "vertical"
            size_hint: [0.1,0.4]
            pos_hint: {"x":0, "y":0}
            Button:
                pos_hint: {"x":0,"y":0}
                size_hint:1,1
                font_size: (root.width**2 + root.height**2)**0.5 / 30
                text:"Voltar"
                on_release:
                    #root.manager.transition.direction = "down"
                    root.manager.transition = NoTransition()
                    root.voltar()

