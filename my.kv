#: import NoTransition kivy.uix.screenmanager.NoTransition
<TelaLogin>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    name: "login"
    usuario: usuario
    senha: senha

    FloatLayout:
        cols: 1

        FloatLayout:     
            Label:
                text:"Usuário"
                color: 0,0,0,1
                font_size: (root.width**2 + root.height**2)**0.5 / 30 
                size_hint: 0.2, 0.1
                # No canto supeior (y=0.8) direito (x=0.7)
                pos_hint: {"x":0.6, "top":0.9}

            TextInput:
                id: usuario
                font_size: (root.width**2 + root.height**2)**0.5 / 30
                size_hint: 0.4, 0.12
                # Um pouco abaixo do usuario
                pos_hint: {"x":0.5, "top":0.8}
                multilie: False

            Label:
                text:"Senha"
                color: 0,0,0,1
                font_size: (root.width**2 + root.height**2)**0.5 / 30
                size_hint: 0.2, 0.1
                pos_hint: {"x":0.6, "top":0.6}

            TextInput:
                id: senha
                font_size: (root.width**2 + root.height**2)**0.5 / 30
                size_hint: 0.4, 0.12
                pos_hint: {"x":0.5, "top":0.5}
                multilie: False

            Button:
                pos_hint: {"x":0.5,"y":0.1}
                font_size: (root.width**2 + root.height**2)**0.5 / 30
                size_hint: 0.4, 0.12
                text:"Login"
                on_release:
                    #root.manager.transition.direction = "up"
                    root.manager.transition = NoTransition()
                    root.logarHandle()

            Label:
                text:"[ref=registro]Clique aqui"+"\n"+" para se registrar[/ref]"
                color: 0,0,0,1
                font_size: (root.width**2 + root.height**2)**0.5 / 50
                size_hint: 0.4, 0.12
                pos_hint: {"x":0.05, "top":0.2}
                halign: "center"
                valign: "center"
                markup: True
                on_ref_press:
                    #root.manager.transition.direction = "up"
                    root.manager.transition = NoTransition()
                    root.registrarHandle()
        
        BoxLayout:
            orientation: "vertical"
            size_hint: [.4,.4]
            pos_hint: {"right":0.45, "top":0.8}
            Image:
                source: "recursos/logo.png"
                allow_stretch: True
                keep_ratio: True

